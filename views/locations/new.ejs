<% layout('layouts/boilerplate') %> 
<form class="validate-form" action="/locations" method="POST" novalidate enctype="multipart/form-data">
  <section class="vh-50 mb-4">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">

          <div class="card text-black mt-4" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">  
                  
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Create new Post</p>
                  
                  <form class="mx-1 mx-md-4">  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="title">Name:</label>
                        <input type="text" class="form-control" id="title" name="locations[title]" placeholder="The Meeting Place" required>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="adress">Adress:</label>
                        <input type="text" class="form-control" id="adress" name="locations[location]" placeholder="Main Street 13" required>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="description">Description:</label>
                        <textarea type="text" class="form-control" id="description" name="locations[description]" placeholder="Great food and drinks..." minlength="5" required></textarea>
                      </div>
                    </div>
  
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="phone">Phone:</label>
                        <input type="tel" class="form-control" id="phone" name="locations[phone]" placeholder="0744 933 888" pattern="[0-9]{4} [0-9]{3} [0-9]{3}" required>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="email">E-mail:</label>
                        <input type="text" class="form-control" id="email" name="locations[email]" placeholder="example@email.com" pattern="[a-zA-Z0-9.-_]{1,}@[a-zA-Z.-]{2,}[.]{1}[a-zA-Z]{2,}" required>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="website">Website:</label>
                        <input type="url" class="form-control" id="website" name="locations[website]" pattern="[Hh][Tt][Tt][Pp][Ss]?:\/\/(?:(?:[a-zA-Z\u00a1-\uffff0-9]+-?)*[a-zA-Z\u00a1-\uffff0-9]+)(?:\.(?:[a-zA-Z\u00a1-\uffff0-9]+-?)*[a-zA-Z\u00a1-\uffff0-9]+)*(?:\.(?:[a-zA-Z\u00a1-\uffff]{2,}))(?::\d{2,5})?(?:\/[^\s]*)?" placeholder="https://www.example.com/" required>
                      </div>
                    </div>

                    <!--
                    <div class="form-group">
                    <label for="image">Image URL:</label>
                    <input type="url" class="form-control" id="image" name="locations[image]" pattern="https://.*" placeholder="https://www.example.com/photo" required>
                    </div>
                    -->

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <label for="images">Upload image(s):</label>
                        <br>
                        <input type="file" class="form-control" name="images" id="images"  name="locations[images]" multiple required>
                      </div>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-warning btn-create-post">Create Post</button>
                    </div>
                  </form>
                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                  <img src="/assets/create-post-phone.jpg"
                    class="img-fluid" alt="Person completing a registration form">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</form>