        <div class="form-group">
          <label for="adress">Adress:</label>
          <input type="text" class="form-control" id="adress" name="locations[location]" placeholder="Main Street 13" required>
        </div>
        <br>
        <div class="form-group">
          <label for="description">Description:</label>
          <textarea type="text" class="form-control" id="description" name="locations[description]" placeholder="Great food and drinks..." minlength="5" required></textarea>
